<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.Controller">
    <bottom>
        <ToolBar BorderPane.alignment="CENTER">
            <items>
                <Button fx:id="startDownloadView" mnemonicParsing="false" onAction="#onStartDownloadClick" text="开始下载"/>
                <Button fx:id="stopDownloadView" mnemonicParsing="false" onAction="#onStopDownloadClick" text="停止下载"/>
                <Button mnemonicParsing="false" onAction="#onSetDownloadDirectoryClick" text="设置下载目录"/>
                <Label fx:id="downloadDirectoryView"/>
            </items>
        </ToolBar>
    </bottom>

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="编辑">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onAddUrl" text="新建"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <TableView fx:id="downloadList" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="urlColumn" text="下载链接"/>
                <TableColumn fx:id="nameColumn" text="视频名称"/>
                <TableColumn fx:id="downloadDirColumn" text="下载位置"/>
                <TableColumn fx:id="statusColumn" text="下载状态"/>
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
